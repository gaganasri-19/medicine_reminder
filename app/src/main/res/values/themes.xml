<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MediGo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dblue</item>
        <item name="colorSecondaryVariant">@color/dblue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dblue</item>
        <item name="colorSecondaryVariant">@color/dblue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dblue</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Define color properties as desired -->
        <item name="colorPrimary">@color/dblue</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="android:textColorHighlight">@color/blue</item>
        <item name="colorAccent">@color/dblue</item>
        <item name="colorControlNormal">@color/dblue</item>
        <!-- Define window properties as desired -->
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="datepicker" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:theme">@style/AppTheme</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/dblue</item>

    <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/dblue</item>
    </style>



</resources>